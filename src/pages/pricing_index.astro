---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vanity">
  <br><br><h2 style="color: white; text-align: center; font-size: 36px; font-weight: bold;">Features</h2>
  <div class="products-container">
    <div class="products">
      <div class="product">
        <h2>Basic</h2>
        <p class="price">$9.90/<span class="small-text">month</span></p>
        <div class="details">
          <p>2 Licenses</p>
          <p>Unlimited Detections</p>
          <p>24/7 Support </p>
        </div>
        <button>BUY NOW</button>
      </div>
      <div class="product pymes">
        <h2>Premium</h2>
        <p class="price">$49.90/<span class="small-text">month</span></p>
        <div class="details">
          <p>20 Licenses</p>
          <p>Unlimited Detections</p>
          <p>24/7 Support </p>
        </div>
        <button>BUY NOW</button>
      </div>
      <div class="product business">
        <h2 class="large-title">Corporational</h2>
        <p class="price">$449.90/<span class="small-text">month</span></p>
        <div class="details">
          <p>Unlimited Licenses</p>
          <div class="details">
          </div>
          <p>Unlimited Detections</p>
          <p>24/7 Support </p>
        </div>
        <button>CONTACT</button>
      </div>
    </div>
  </div>
</Layout>

<style>
.small-text {
  font-weight: normal;
  font-size: 0.5em;
}

.products-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  height: 100vh;
  padding-top: 5%;
  flex-wrap: wrap;
}

.products {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.details p::before {
  content: "\2022";
  color: white;
  display: inline-block;
  width: 1em;
  margin-left: -1em;
}

.product {
  background-color: #232628;
  border: 1px solid #FFFFFF;
  padding: 40px;
  text-align: center;
  color: #FFFFFF;
  font-family: 'Inter', sans-serif;
  border-radius: 15px;
  min-width: 300px;
  min-height: 200;
  width: 100%;
}

.product h2 {
  font-weight: bold;
}

.product p {
  margin-bottom: 10px;
}

.product.pymes {
  border-color: #3A50FF;
}

.product.business {
  border-color: #E7AB11;
}

.product button {
  margin-top: 20px;
  background-color: #4254E3;
  color: #FFFFFF;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  border-radius: 15px;
}

.product button:hover {
  background-color: #3144B8;
}

.price {
  font-size: 24px;
  font-weight: bold;
}

.details {
  text-align: left;
}

@media (min-width: 600px) {
  .product {
    width: 50%;
  }
}

@media (min-width: 900px) {
  .product {
    width: 33.33%;
  }
}
</style>