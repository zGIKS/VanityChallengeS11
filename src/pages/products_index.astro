
---
import Layout from "../layouts/Layout.astro";
---

<style>
  .content {
    display: flex;
    justify-content: center; /* Centra los elementos, reduciendo el espacio en medio */
    align-items: center; /* Alinea verticalmente */
    flex-wrap: wrap; /* Permite que los elementos se envuelvan si no hay suficiente espacio */
  }
  
  .centered-content {
    margin: 180px; /* Ajusta el margen para controlar el espacio alrededor de los elementos */
    max-width: 600px; /* Ajusta este valor según el ancho deseado */
    text-align: center; /* Centra el texto dentro del div */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .container:first-of-type {
    margin-top: 70px; /* Espacio adicional solo en el primer contenedor */
  }
  .container {
    background-color: #232628;
    padding: 30px;
    margin: 50px; /* Ajusta el margen para controlar el espacio alrededor de los elementos */
    color: white; /* Para que el texto sea legible */
    border-radius: 10px; /* Opcional, para bordes redondeados */
    width: 550px; /* Ancho fijo */
  }
  .container h2 {
    margin: 0; /* Espacio entre el título y el texto */
    font-size: 1.25em; /* Tamaño del título */
  }
  .container p {
    margin: 0px; /* Sin margen adicional */
  }
  h1 {
    margin-top: 30px; /* Espacio adicional en el primer contenedor */
    text-align: center;
    flex: 1;
    white-space: nowrap; /* Asegura que el texto esté en una sola línea */
  }
  /* Estilo actualizado para justificar el texto del párrafo */
  .centered-content p {
    text-align: justify;
    margin-bottom: 100px;
    font-size: 20px;
    line-height: 1.5;
  }

  

  @media (max-width: 1024px) {
  .container, .centered-content {
    width: 80%; /* Ajusta el ancho de los contenedores para pantallas medianas */
    margin: 20px auto; /* Centra y ajusta el margen */
  }
  .container h2, .centered-content h1, .centered-content p {
    font-size: calc(18px + (26 - 18) * ((100vw - 400px) / (1024 - 400))); /* Ajusta el tamaño del texto de forma dinámica */
  }
}

@media (max-zoom: 500%) {
  .content, .centered-content, .container {
    display: block; /* Cambia la disposición a bloque para evitar problemas de visualización */
  }

  .centered-content, .container {
    width: 100%; /* Ajusta los contenedores para que ocupen el ancho completo */
    margin: 10px auto; /* Reduce el margen para una mejor visualización */
    padding: 10px; /* Ajusta el padding para mantener el contenido legible */
  }

  .container h2, .centered-content h1, .centered-content p {
    font-size: 5vw; /* Aumenta el tamaño del texto para mejorar la legibilidad */
  }

  .container {
    padding: 20px; /* Aumenta el padding para evitar que el texto toque los bordes */
  }

  .centered-content p {
    margin-bottom: 20px; /* Reduce el margen inferior para evitar espacios excesivos */
  }

  img {
    width: 50%; /* Ajusta el tamaño de las imágenes para que no ocupen demasiado espacio */
    margin: 0 auto; /* Centra las imágenes */
  }
}

@media (max-width: 480px) {
  .centered-content {
    margin: 20px 10px; /* Reduce aún más el margen para pantallas muy pequeñas */
  }
  .container {
    padding: 15px; /* Reduce el padding */
    width: 95%; /* Aumenta el ancho para aprovechar mejor el espacio */
  }
  .container h2, .centered-content h1, .centered-content p {
    font-size: calc(14px + (22 - 14) * ((100vw - 300px) / (480 - 300))); /* Ajusta el tamaño del texto de forma dinámica para pantallas muy pequeñas */
  }
}
</style>

